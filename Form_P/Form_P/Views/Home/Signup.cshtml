
@{
    ViewBag.Title = "Signup";
}

@{
    bool CheckGender(string gn)
    {
        if (Model != null && Model.Gender != null && Model.Gender.Equals(gn))
        {
            return true;
        }
        return false;
    }

   

    bool CheckProfession(string prof)
    {
        if (Model != null && Model.Profession != null)
        {
            foreach (var h in Model.Profession)
            {
                if (h.Equals(prof)) return true;
            }
        }
        return false;
    }

}

<h2>Signup</h2>

<form method="post">
    <input type="text" name="Name" class="form-control" value="@(Model != null ? Model.Name :"" )" placeholder="Name" />
    <span class="text-danger">@Html.ValidationMessage("Name")</span><br> 
    <input type="text" name="Username" value="@(Model != null ? Model.Username : "" )" class="form-control" placeholder="Username" />
    <span class="text-danger">@Html.ValidationMessage("Username")</span>
    <br>Gender:<br /> <input type="radio" checked="@CheckGender("Male")" name="Gender" value="Male" /> Male
    <input type="radio" name="Gender" checked="@CheckGender("Female")" value="Female" /> Female </br>
    <span class="text-danger"> @Html.ValidationMessage("Gender") </span>
    <br />
    Profession:
    <input type="checkbox" checked="@CheckProfession("Student")" name="Profession[]" value="Student" />Student
    <input type="checkbox" checked="@CheckProfession("Business")" name="Profession[]" value="Business" />Business
    <input type="checkbox" checked="@CheckProfession("Teacher")" name="Profession[]" value="Teacher" />Teacher
    <br />
    <span class="text-danger">@Html.ValidationMessage("Profession")</span>
    <br />
    Dob: <input type="date" name="Dob" value="@(Model != null ? Model.Dob.Date.ToString("yyyy-MM-dd") : "")" />
    <br />
    <span class="text-danger"> @Html.ValidationMessage("Dob") </span>
    <br />
    Student ID: <input type="text" name="Id" value="@(Model != null ? Model.Id: "")" placeholder="Student ID" />
    <br />
    <span class="text-danger"> @Html.ValidationMessage("Id") <br /> </span>
    Student Email: <input type="text" name="Email" value="@(Model != null ? Model.Email: "")" placeholder="Student Email" /> <br />
    
    <span class="text-danger">@Html.ValidationMessage("Email")<br /> </span>

        <input type="submit" class="btn btn-success" />
</form>

